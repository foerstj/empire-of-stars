[hermit_loggerman]
{
	[text*]
	{
		choice = more;
	  i order = 0;
		screen_text = "Welcome to Little Iliyara Island!
Glad to see you arrived well. It must have been a long and tiresome journey through the vast stretches of Central Aranna...";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 1;
		screen_text = "I am a loggerman and I live here as a hermit. Not many people visit here - most people who do come to Lake Chalice visit Main Iliyara Island to see the Acropolis and the Palace of Night; few can be bothered to visit the other small islands around it.
I get visitors about once or twice a year, they usually want to study the ruins here, and to be honest the line between scholar and nuthead is often blurry, no offense meant.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 2;
		screen_text = "As I wrote to you in my letter, your aunt was staying here, and after a week she suddenly disappeared. She hasn't returned in the meantime either, and I have still no clue as to where she's gone. I must've searched the island half a dozen times by now.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		choice = more;
	  i order = 3;
		screen_text = "In my house is still her chest with her belongings. If she remains disappeared, it belongs to you now, I guess.";
	  f scroll_rate = 10.000000;
	}
	[text*]
	{
		screen_text = "Thank you for coming. I hope you can find her, or at least find out what happened to your aunt...";
	  f scroll_rate = 10.000000;
	}
}
[hermit_loggerman_back]
{
	[text*]
	{
		screen_text = "You're back! I'm so glad to see you alive... But how you have changed! And where have you been?";
	  f scroll_rate = 10.000000;
	}
}
