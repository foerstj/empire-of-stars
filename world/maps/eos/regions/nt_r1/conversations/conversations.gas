[conversation_onoc]
{
	[text*]
	{
		order = 0;
		choice = shop;
		screen_text = "It's a bit muggy out there, eh? Well thank the seven powers I don't have to live here year-round! I only come down here to run experiments. Heating and freezing spells, that nature of beast. In any case, you can have a look at some of my potions and spells if you like.";
	}
	[text*]
	{
		choice = shop;
		screen_text = "Oh, hello again! Thought of something you could use? I've got the best spells of the whole kingdom here!";
	}
}
[conversation_ibsen]
{
	[text*]
	{
		activate_quest*	= quest_find_merik;
		screen_text = "We welcome you on this world, tall alien. You say you search for an ancient stone to return to your home world - We wish you best luck, but unfortunately we know only little of the time of antiquity. Our records date back no further than to the founding of this city, hundreds of years ago. Apart from us Dwarves, only beasts like the Krug and Braak inhabit this world; and the Zaurask down in the Fireheart Caves. Maybe the best idea would be to search down there - the Caves are not fully explored, because of the smoldering heat down there.";
		quest_dialog = true;
        choice = more;
	}
}
[conversation_ibsen_2]
{
	[text*]
	{
		screen_text = "Our nephew is a good the barkeeper and that's what he should stick to; instead he keeps babbling of things on the Moon he sees in his dreams. Yeah maybe the artifact you're looking for is on the Moon for whatever we know, haha. If you came from the stars you can fly up there, We guess. Wrap yourselves in furs; from what we can see through telescopes from here, it should be rather cold and unpleasant up there.";
		activate_quest* = quest_fort_kroth;
		quest_dialog = true;
	}
}
[conversation_jewlynna]
{
	[text*]
	{
		activate_quest*	= quest_find_merik,1;
		screen_text = "Blast the monarchy! The King would give audience to a dog wearing the Legion's colors, but will he listen to his own nephew? I've seen a magic stone in my dreams, trapped in the ice of the Moon. For generations my family's had the sight of dreams, but what am I given to do? Scrubbing, cooking, and minding the inn, that's what! OOOOOOOH!";
		quest_dialog = true;
	}
}
[conversation_lorun_multiplayer]
{
	[text*]
	{
		screen_text = "If you've soom business with the King, I suggest you speak to him directly aboot it. I'm joost here to deliver word on the state of things at the Elevator.";
	}
}
[conversation_lorun_overseer]
{
	[text*]
	{
		screen_text = "If you've soom business with the King, I suggest you speak to him directly aboot it. I'm joost here to deliver word on the state of things at the Elevator.";
	}
