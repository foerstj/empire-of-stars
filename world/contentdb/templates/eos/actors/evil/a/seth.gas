// Seck Mage with stats of Wraith Mage
[t:template,n:seth_mage_base]
{
	category_name = "1W_evil_a";
	doc = "Seth Mage";
	specializes = base_seck;
    
    [actor]
    {
        drops_spellbook = false;
    }
    [aspect]
    {
		model = m_c_eam_sm_pos_1;
		[textures] { 0=b_c_eam_sm; }
    }
	[body]
	{
		[chore_dictionary]
		{
			chore_prefix = a_c_eam_sm_fs;
			[chore_attack]
			{
				chore_stances = 5;
				skrit = select_attack;
				[anim_files]
				{
					0000 = at;
					0001 = at-02;
					qffg = dff;
				}
			}
			[chore_default]
			{
				chore_stances = 5;
				skrit = infinite_loop;
				[anim_files] { 00=dfs; }
