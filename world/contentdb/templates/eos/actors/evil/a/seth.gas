			?social	= 0.45
			&still	= false;

	}

	[actor]
	{
		[skills]
		{
			strength = 		17, 0;
			intelligence = 	12, 0;
			dexterity = 	9, 0;
   			combat_magic =  30,  0;
		}
	}
	[aspect]
	{
		experience_value = 10515;
		life = 450;
		max_life = 450;
		mana = 18;
		max_mana = 18;
	}
	[attack]
	{
		attack_range = 0.5;
		damage_max = 140;
		damage_min = 107;
	}
   	[defend] { defense=400; }

   	[inventory]
	{
		selected_active_location = il_active_primary_spell;
		[other]
		{
			il_active_primary_spell = spell_wraith_hands;
		}
		[pcontent]
		{
			[all*]
			{
				es_weapon_hand = st_un_seth_mage;
			}

			[oneof*]
			{
				[oneof*]
				{
					chance = 0.35;
					il_main = #*/78-105;
                    il_main = #armor/51-253;
                    il_main = #body,ro/151-253;
	                il_main = #spell/26-45;
				}
				[oneof*]
				{
	            	chance = 0.004;
	                il_main = #weapon/-rare(1)/87-115;
	                il_main = #armor/-rare(1)/248-277;
                    il_main = #*/-rare(1)/87-115;
                }
				[oneof*]
				{
                	chance = 0.002;
	                il_main = #weapon/-unique(2)/87-115;
	                il_main = #armor/-unique(2)/248-277;
                    il_main = #*/-unique(2)/87-115;
	            }
				[gold*]
				{
					chance = 0.125;
					max = 13001;
					min = 12200;
				}
			}
		}
	}
