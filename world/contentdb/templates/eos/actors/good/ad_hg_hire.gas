			dexterity 		=   5.4, 0, 10;
			intelligence 	=  	1.8, 0, 10;
			
            melee 			= 	20, 0, 0;
            uber 			= 	20, 0, 0;
		}
	}
	[aspect]
	{
		[textures]
		{
			0 = b_c_gan_hg_skin_01;
			1 = b_c_pos_a1_100;
		}
    }
	[common]
	{
		screen_name = "Hireable Half-Giant Melee 1";
