		max_life = 1;
		is_invincible		= false;
    }
	[breaking_object]
	{
		damage_on_activate = 5;
	}
    [common]
    {
	  b rollover_display = true;
		[template_triggers]
		{
			[*]
			{
				single_shot = true;
				action* = call_sfx_script("ghost_eye_glow");
				condition* = receive_world_message("we_entered_world");  // EDITED (was we_enemy_spotted)
			}
		}
    }
    [inventory] {}  // clear inventory - no spell needed, no loot desired
    [conversation] {}
    [mind]
    {
        actor_may_attack = false;
        actor_may_be_attacked = false;
        jat_startup = jat_none;
		jat_talk	= world\ai\jobs\common\job_talk.skrit;
    }
    [respawn_shrine] {}
}
