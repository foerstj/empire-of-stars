[t:template,n:googore_base]  // = googore
{
	doc = "googore";
	specializes = actor_evil;
    category_name = "1W_evil_d";

	[actor]
	{
		race	= other;

		[skills]
		{
			strength =  	18, 0;
			intelligence =  7, 0;
			dexterity =  	10, 0;
			melee =  		40, 0;
		}
	}

	[aspect]
	{
		draw_shadow 		= false;
		model				= m_c_edm_gg_pos_1;
		experience_value	= 17000;
		life				= 1330;
		max_life			= 1330;
		mana				= 10;
		max_mana			= 10;
		[voice]
		{
			[enemy_spotted]	{ priority = high; * = s_e_call_googore_SED;  }
		}
	}

	[attack]
	{
		attack_range	= 0.5;
		damage_min		= 160;
		damage_max		= 180;
	}

	[body]
	{
		avg_move_velocity = 1.0;
        [bone_translator]
		{
			 kill_bone			= bone16;
			 weapon_bone		= bone07;
			 shield_bone		= bone07;
			 body_anterior		= bone07;
			 body_mid			= bone16;
			 body_posterior		= bone01;
		}
		[chore_dictionary]
		{
			chore_prefix = a_c_edm_gg_fs;

			[chore_attack]
			{
				skrit = select_attack;
				chore_stances = 0;

				anim_files:00 = at;
			}
			[chore_magic]
			{
				skrit = select_attack;
				chore_stances = 0;

				anim_files:00 = at-02;
			}
			[chore_die]
			{
				skrit = select_transition;
				chore_stances = 0;

				anim_files:00 = di;
			}

			[chore_default]
			{
				skrit = infinite_loop;
				chore_stances = 0;

				anim_files:00 = dfs;
			}
			[chore_misc]
			{
				chore_stances = 0;
				skrit = select_transition;
				[anim_files]
				{
					slep = ds;
					wake = rv;
				}
			}
			[chore_fidget]
			{
				skrit = select_fidget;
				chore_stances = 0;

				anim_files:00 = dff;
			}

			[chore_walk]
			{
				skrit = select_walk;
				chore_stances = 0;

				anim_files:00 = rv;
			}
		}
	}
	[generator_in_object]
	{
		child_template_name = hole_cav_01;
		spawn_event = WE_ENEMY_SPOTTED;
		spawn_chance = 1.0;
		spawn_delay = 0.5;
		fade_kid = true;
	}
    [inventory]
	{
		selected_active_location = il_active_primary_spell;
		[other] { il_active_primary_spell=spell_googore_spit; }
	}
	[common]
	{
		screen_name="Googore";
		membership=monster,immune_freeze;
		[template_triggers]
		{
			[*]
			{
				action* = call_sfx_script("googore_goo");
				condition* = receive_world_message("we_anim_sfx",1);
			}

			[*]
			{
				action* = call_sfx_script("googore_goo");
				condition* = receive_world_message("we_anim_die");
			}
		}
	}
	[defend] { defense=380; }
	[mind]
	{
		actor_weapon_preference					= WP_MAGIC;
		actor_auto_switches_to_magic			= true;
		actor_auto_switches_to_karate			= true;
		actor_auto_switches_to_melee			= true;

		jat_startup 							= world\ai\jobs\common\job_startup_reveal.skrit
			?invisible 							= true;

		jat_die 								= world\ai\jobs\actors\evil\job_die_delete.skrit;

		jat_flee_from_object					= jat_none;
		jat_guard         						= jat_none;
		jat_move          						= jat_none;
		jat_patrol         						= jat_none;

		on_enemy_entered_icz_switch_to_melee	= true;

		actor_auto_fidgets 						= false;
		movement_orders							= mo_hold;
		inner_comfort_zone_range				= 1.9;
		melee_engage_range 						= 2.0;
		personal_space_range					= 1.5;
		ranged_engage_range 					= 14.0;
		sight_range								= 14.0;
		sight_origin_height						= 2;
	}

}

